<script nonce="@_Fun.Nonce">
    $(function () {
        _me.init();
    });

    var _me = {
        init: function () {
            var config = {
                //修改:查詢結果欄位,與後端read service對應, 這是 Datatables config
                columns: [
                    { data: 'ProjectCode', orderable: true },
                    { data: 'TableCode', orderable: true },
                    { data: 'Code', orderable: true },
                    { data: 'Name' },
                    { data: 'DataType', orderable: true },
                    { data: 'CreatorName' },
                    { data: '_Fun' },
                    { data: 'Status', orderable: true },
                ],

                //修改:如果查詢結果欄位有特殊的顯示規則就寫在這裡
                columnDefs: [
                    { targets: [6], render: function (data, type, full, meta) {
                        return _me.crudR.dtCrudFun(full.Id, full.Name, true, true, true);
                    }},
                    { targets: [7], render: function (data, type, full, meta) {
                        return _me.crudR.dtStatusName(data);
                    }},
                ],
            };

            //init crud
            new CrudR(config);
        },

    }; //class
</script>

<vc:xg-prog-path />
<div class="x-prog">
    <div id="divRead">
        <form id='formRead' class='x-form mb-0'>
            <div class="row">
                @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "專案", Fid = "ProjectId", Rows = ViewBag.Projects, InRow = true })
                @await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto { HasReset = true, HasFind2 = true })
            </div>
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "資料表", Fid = "TableCode", MaxLen = 30 })
        </form>

        <form id='formRead2' class='x-form mb-0'>
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "欄位", Fid = "Code", LabelTip = "使用模糊查詢",  MaxLen = 30 })
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "欄位名稱", Fid = "Name", LabelTip = "使用模糊查詢", MaxLen = 30 })
        </form>
        <div class="x-h10"></div>

        <table id="tableRead" class="table table-bordered x-table" cellspacing="0">
            <thead>
                <tr>
                    <th>專案</th>
                    <th>資料表</th>
                    <th>欄位</th>
                    <th>欄位名稱</th>
                    <th>資料型態</th>
                    <th>建檔人員</th>
                    <th width='90px'>維護</th>
                    <th width='110px'>資料狀態</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="d-none">
        <partial name="Edit" />
    </div>
</div>
@inject IHtmlLocalizer<DbAdm.R0> R

<script src="~/js/view/MyCrud.js"></script>
<script type="text/javascript">
    $(function () {
        _me.init();
    });
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { R["MenuMyCrud"].Value } })
<div class="xg-prog">
    <!-- read form-->
    <div id="divRead">
        <!-- condition -->
        <form id='formRead' class='xg-form' style="margin-bottom:0;">
            <div class="row">
                @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = R["Project"].Value, Fid = "ProjectId2", Rows = ViewBag.Projects, InRow = true })
                @await Component.InvokeAsync("XgFindTbar")
            </div>
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = R["ProgCode"].Value, Fid = "ProgCode" })
        </form>

        <!-- other functions -->
        <div class="xg-btns-box" style="margin-top:5px;">
            @await Component.InvokeAsync("XgCreate", new { fnOnClick = "_me.crudR.onCreate()" })
            <button type="button" class="btn xg-btn-gray" onclick="_me.onGenCrud()">@R["GenCrud"]</button>
        </div>

        <!-- result list -->
        <table id="tableRead" class="table xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th width="60px" class="xg-center">@R["Select"]</th>
                    <th>@R["Project"]</th>
                    <th>@R["ProgCode"]</th>
                    <th>@R["ProgName"]</th>
                    <th width='90px'>@R["Crud"]</th>
                    <th width='100px' class="xg-center">@R["Status"]</th>
                    <th>@R["Created"]</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- edit form-->
    <div id="divEdit" class="xg-hide">
        <partial name="Edit" />
    </div>
</div>
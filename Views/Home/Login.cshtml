@model LoginVo
@{
    Layout = null;
    var accountMsgClass = (Model.AccountMsg == "") ? "hide" : "";
    var pwdMsgClass = (Model.PwdMsg == "") ? "hide" : "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Form</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style nonce="@_Fun.Nonce">
        body {
            font-family: 'Open Sans', sans-serif;
            background: #3498db;
            margin: 0 auto 0 auto;
            width: 100%;
            text-align: center;
            margin: 20px 0px 20px 0px;
        }

        /*
        p {

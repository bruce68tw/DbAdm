            document.getElementById('Account').focus();
        };
    </script>
</head>
<body>
    <div id="formBox">
        <form action=@Url.Action("login") method="post">
            @Html.AntiForgeryToken()  <!-- 資安: 防止CSRF -->
            <input name="FromUrl" type="hidden" value="@Model.FromUrl">
            <div class="box">
                <h1>登入畫面</h1>
                <input type="text" id="Account" name="Account" value="@Model.Account" aria-label="登入帳號" placeholder="請輸入帳號">
                <div id="AccountMsg" class="@accountMsgClass">@Model.AccountMsg</div>
                <input type="password" name="Pwd" value="@Model.Pwd" aria-label="密碼" placeholder="請輸入密碼">
                <div id="PwdMsg" class="@pwdMsgClass">@Model.PwdMsg</div>
                <button type="submit" aria-label="提交表單">送出</button>
            </div>
        </form>
    </div>
</body>
</html>
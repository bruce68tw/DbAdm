{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [ "ES2017", "DOM" ],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./_ts",
    "outDir": "./wwwroot/js_new",
    "strict": true,
    "removeComments": false,
    "sourceMap": true,
    "mapRoot": "./wwwroot/map",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "types": [ "jquery", "jquery.validation" ],
    "skipLibCheck": true    //加快編譯，避免外部 d.ts 報錯
  },
  "include": [
    "_ts/base/**/*.ts",
    "_ts/view/*.ts"
  ]
}
